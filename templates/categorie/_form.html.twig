{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Modifier la catégorie : <span>{{ categorie.nom }}</span></h4>

    <form method="post" action="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
        <div class="form-group mb-3">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" id="nom" name="nom" value="{{ categorie.nom }}" required>
        </div>

   <div class="form-group mb-3">
        <label for="image">Image</label>
        <input type="file" class="form-control-file" id="image" name="image">
        {% if categorie.image %}
            <p>Image actuelle :</p>
            <img src="{{ asset('uploads/' ~ categorie.image) }}" alt="Image" width="100">
        {% endif %}
    </div>

        <div class="form-group mb-3">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3">{{ categorie.description }}</textarea>
        </div>

        <div class="form-group mb-3">
            <label for="image">Image (URL ou chemin)</label>
            <input type="text" class="form-control" id="image" name="image" value="{{ categorie.image }}">
        </div>

        <div class="form-group mb-3">
            <label for="createdAt">Date de création</label>
            <input type="text" class="form-control" id="createdAt" 
                   value="{{ categorie.createdAt ? categorie.createdAt|date('d/m/Y H:i') : '' }}" readonly>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bx bx-save me-1"></i> Enregistrer
        </button>
        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
            <i class="bx bx-arrow-back me-1"></i> Retour
        </a>
         
    </form>
</div>
{% endblock %}


 

