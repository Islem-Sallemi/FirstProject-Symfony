{% extends 'sneat_base.html.twig' %}

{% block title %}{{ produit.nom }} - Pharmax Admin{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{ produit.nom }}</h5>
        <div>
          <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning btn-sm me-2">
            <i class="bx bx-pencil"></i> Modifier
          </a>
          <a href="{{ path('app_produit_index') }}" class="btn btn-secondary btn-sm">
            <i class="bx bx-arrow-back"></i> Retour
          </a>
        </div>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-4">
            {% if produit.image %}
              <img src="{{ asset('uploads/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-fluid rounded">
            {% else %}
              <div class="alert alert-info">Pas d'image</div>
            {% endif %}
          </div>

          <div class="col-md-8">
            <div class="mb-3">
              <h6 class="mb-1 text-muted">Catégorie</h6>
              <p class="mb-0">
                {% if produit.categorie %}
                  {{ produit.categorie.nom }}
                {% else %}
                  <span class="badge bg-danger">Catégorie supprimée</span>
                {% endif %}
              </p>
            </div>

            <div class="mb-3">
              <h6 class="mb-1 text-muted">Prix</h6>
              <p class="mb-0 h5">{{ produit.prix }} DTN</p>
            </div>

            <div class="mb-3">
              <h6 class="mb-1 text-muted">Quantité en Stock</h6>
              <p class="mb-0 h5">
                <span class="badge bg-info fs-6">{{ produit.quantite }}</span>
              </p>
            </div>

            <div class="mb-3">
              <h6 class="mb-1 text-muted">Statut</h6>
              <p class="mb-0">
                {% if produit.statut %}
                  <span class="badge bg-success">Valable</span>
                {% else %}
                  <span class="badge bg-danger">Hors Stock</span>
                {% endif %}
              </p>
            </div>

            <div class="mb-3">
              <h6 class="mb-1 text-muted">Date d'expiration</h6>
              <p class="mb-0">{{ produit.dateExpiration ? produit.dateExpiration|date('d/m/Y') : 'N/A' }}</p>
            </div>

            <div class="mb-3">
              <h6 class="mb-1 text-muted">Créé le</h6>
              <p class="mb-0">{{ produit.createdAt ? produit.createdAt|date('d/m/Y H:i') : 'N/A' }}</p>
            </div>
          </div>
        </div>

        <hr>

        <div class="mb-3">
          <h6 class="mb-2 text-muted">Description</h6>
          <p>{{ produit.description }}</p>
        </div>

        <div class="pt-3">
          <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
            <button type="submit" class="btn btn-danger">
              <i class="bx bx-trash"></i> Supprimer ce produit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
